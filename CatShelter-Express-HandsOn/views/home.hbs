
<form action="/" method="get">
            <input type="text" name="search" value="{{search}}">
            <input type="submit" id="submitBtn" value="Search">
</form>

<section class="cats">
    {{#if cats}}
            <ul>
               {{#each cats}}
               {{> catCard}}
               {{/each}} 
            </ul>
    {{else}}
        <p><i>No cats available!</i></p>
    {{/if}}
 </section>